{
  "name": "war-room-monitoring-enhanced",
  "version": "2.0.0",
  "description": "Enhanced comprehensive monitoring system for War Room application with TypeScript, circuit breakers, and sub-agent coordination",
  "main": "health-monitor-enhanced.js",
  "scripts": {
    "start": "npm run build && node dist/health-monitor-enhanced.js",
    "start:dev": "ts-node health-monitor-enhanced.ts",
    "build": "tsc",
    "monitor": "npm run start",
    "dashboard": "node real-time-dashboard.js",
    "dashboard:enhanced": "npm run build && node dist/enhanced-dashboard.js",
    "alerts": "node alert-system.js",
    "health-check": "npm run build && node dist/health-monitor-enhanced.js check",
    "health-check:dev": "ts-node health-monitor-enhanced.ts check",
    "install-deps": "npm install",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest",
    "test:integration": "npx playwright test --project=monitoring",
    "test:performance": "npx ts-node performance-test.ts",
    "lint": "eslint '**/*.{ts,js}' --fix",
    "clean": "rm -rf dist",
    "dev": "nodemon --exec ts-node health-monitor-enhanced.ts",
    "pieces:sync": "npx ts-node pieces-sync.ts",
    "websocket:test": "npx ts-node websocket-test.ts"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "nodemailer": "^6.9.7",
    "node-cron": "^3.0.3",
    "chalk": "^4.1.2",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "ws": "^8.14.2",
    "@types/ws": "^8.5.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.8",
    "@types/blessed": "^0.1.21",
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "monitoring",
    "health-check",
    "war-room",
    "dashboard",
    "alerts",
    "typescript",
    "circuit-breaker",
    "websocket",
    "auto-fix",
    "performance-sla"
  ],
  "author": "War Room Development Team",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ]
  }
}