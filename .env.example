# Supabase Configuration (REQUIRED - replaces FastAPI backend)
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Default Organization ID
REACT_APP_DEFAULT_ORG_ID=

# Environment
REACT_APP_ENV=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_AUTOMATION=true
REACT_APP_ENABLE_DOCUMENT_INTELLIGENCE=true

# OAuth Configuration
# Set to false if OAuth providers are not enabled in Supabase
REACT_APP_ENABLE_GOOGLE_AUTH=false
REACT_APP_ENABLE_GITHUB_AUTH=false

# Legacy FastAPI Configuration (DEPRECATED - REMOVE AFTER MIGRATION)
# DATABASE_URL=postgresql://user:pass@localhost:5432/warroom
# REDIS_URL=redis://localhost:6379
# JWT_SECRET=your-secret-key-change-in-production
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Ads API Configuration (CRITICAL: Use Supabase Vault in production)
# Development only - DO NOT commit real credentials
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your-login-customer-id

# Google Ads OAuth2 Configuration (REQUIRED for OAuth2 flow)
GOOGLE_ADS_CLIENT_ID=your-google-oauth2-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-oauth2-client-secret
# Base URL for OAuth2 redirects (should match your domain)
API_BASE_URL=https://your-domain.com
# Redirect URI for Google OAuth2 (must be configured in Google Cloud Console)
GOOGLE_ADS_REDIRECT_URI=http://localhost:5173/auth/google-ads/callback

# Google Service Account (CRITICAL: Store in Supabase Vault in production)
# This should be a JSON string of the service account key
# Example: {"type":"service_account","project_id":"your-project",...}
GOOGLE_SERVICE_ACCOUNT_JSON=

# Alternative: Path to service account file (local development only)
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=./credentials/google-service-account.json

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_POOL_MIN_SIZE=10
REDIS_POOL_MAX_SIZE=20

# Rate Limiting
RATE_LIMIT_ANALYTICS=30/minute
RATE_LIMIT_EXPORT=10/hour
RATE_LIMIT_WEBSOCKET=100/minute

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# PostHog Analytics
POSTHOG_API_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# Meta Business Suite API Configuration (CRITICAL: Use Supabase Vault in production)
# Development only - DO NOT commit real credentials
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret

# Meta API Version (default: v18.0)
META_API_VERSION=v18.0

# Meta OAuth2 Redirect URI (must be configured in Meta App settings)
META_REDIRECT_URI=http://localhost:5173/auth/meta/callback

# Admin Authentication Configuration (CRITICAL: Secure these values in production)
# Separate JWT secret for admin authentication (different from user auth)
ADMIN_JWT_SECRET=admin-jwt-secret-change-in-production-minimum-32-chars
# Admin session duration in hours (default: 4 hours for security)
ADMIN_SESSION_DURATION=4

# Initial Admin Setup (REQUIRED for first-time setup)
# Set these values and run: python scripts/create_admin.py
# REMOVE ADMIN_PASSWORD from environment after initial setup for security
ADMIN_USERNAME=admin
ADMIN_PASSWORD=
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_FULL_NAME=System Administrator

# Admin Security Notes:
# 1. Use a strong ADMIN_PASSWORD (min 8 chars, mixed case, numbers, symbols)
# 2. Remove ADMIN_PASSWORD from .env after running create_admin.py
# 3. Use unique ADMIN_JWT_SECRET (different from JWT_SECRET)
# 4. Monitor admin access logs regularly
# 5. Enable 2FA for admin accounts in production