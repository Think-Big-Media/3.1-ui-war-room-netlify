# War Room Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:pass@localhost:5432/warroom

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# GitHub
GITHUB_PAT=your-github-pat

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=warroom-documents
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_HOST=

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_DB_PASSWORD=your-supabase-db-password

# PostHog Configuration
POSTHOG_KEY=your-posthog-key
POSTHOG_HOST=https://us.i.posthog.com

# Mentionlytics Configuration
MENTIONLYTICS_EMAIL=your-mentionlytics-email
MENTIONLYTICS_PASSWORD=your-mentionlytics-password
MENTIONLYTICS_API_ENDPOINT=https://app.mentionlytics.com/api/token

# Facebook Marketing API
FACEBOOK_WARROOM_API_TOKEN=your-facebook-api-token

# SendGrid/Twilio Configuration
NOTIFICATION_EMAIL=your-notification-email
NOTIFICATION_PASSWORD=your-notification-password
TWILIO_2FA_NUMBER=your-twilio-number
TWILIO_RECOVERY_CODE=your-twilio-recovery-code
SENDGRID_API_KEY=your-sendgrid-api-key

# Google Ads API
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token

# Deployment
RENDER_ENV=development
PYTHON_VERSION=3.11
NODE_VERSION=20.11.1